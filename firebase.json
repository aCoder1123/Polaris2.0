{
	"hosting": {
		"public": "public",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"emulators": {
		"auth": {
			"port": 9099
		},
		"functions": {
			"port": 5001
		},
		"hosting": {
			"port": 5002
		},
		"ui": {
			"enabled": true
		},
		"firestore": {
			"port": 8080
		},
		"singleProjectMode": true
	},
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
		}
	],
	"firestore": {
		"rules": "firestore.rules"
	}
}
